@model PagedResult<OrderDto>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @item.OrderNumber
                </td>
                <td>
                    @item.OrderDate.ToString("yyyy-MM-dd HH:mm")
                </td>
                <td>
                    @item.TotalAmount.ToRupiah()
                </td>
                <td>
                    <span
                        class="badge @(item.Status == Domain.Enums.OrderStatus.PAID ? "badge-success" : item.Status == Domain.Enums.OrderStatus.CANCELLED ? "badge-danger" : "badge-warning")">@item.Status</span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Pagination" model="Model" />